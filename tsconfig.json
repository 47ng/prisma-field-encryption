{
  "compilerOptions": {
    // Type checking
    "strict": true,

    // Modules
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",

    // Language & Environment
    "target": "es2018",
    "lib": ["dom"],

    // Emit
    "outDir": "./dist",
    "declaration": true,
    "downlevelIteration": true,

    // Interop
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Experimental Options
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Misc
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "./dist", "./prisma", "./src/tests/migrate.ts"]
}
